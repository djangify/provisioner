# =============================================================================
# eBuilder Provisioner Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# Django
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=provisioner.ebuilder.host,localhost,127.0.0.1

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# The Price ID for your Â£12/month subscription
# Create this in Stripe Dashboard > Products > Create Product
STRIPE_PRICE_ID=price_...

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# The eBuilder Docker image to use
EBUILDER_IMAGE=djangify/ebuilder:latest

# Where customer data is stored on the host
CUSTOMER_DATA_ROOT=/srv/customers

# Docker network for containers
CONTAINER_NETWORK=ebuilder-network

# Port range for customer containers
PORT_RANGE_START=8100
PORT_RANGE_END=8999

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your base domain (customers get subdomains like customer.ebuilder.host)
BASE_DOMAIN=ebuilder.host

# Where nginx configs are written (for reverse proxy)
NGINX_CONFIG_DIR=/etc/nginx/sites-enabled

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For sending welcome emails and notifications

# Console backend (for testing - prints to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP backend (for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=postmaster@mg.ebuilder.host
# EMAIL_HOST_PASSWORD=your-mailgun-password

DEFAULT_FROM_EMAIL=noreply@ebuilder.host

# =============================================================================
# CORS (if needed)
# =============================================================================
CORS_ALLOWED_ORIGINS=https://ebuilder.host,https://www.ebuilder.host
